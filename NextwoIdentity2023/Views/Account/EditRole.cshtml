@model NextwoIdentity2023.Models.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<h1>EditRole</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <input asp-for="RoleId" readonly class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="RolesList" asp-controller="Account" class="btn btn-warning">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        Users in this card
    </div>
    <div class="card-body">
        @if (Model.Users!.Any())
        {
            @foreach (var users in Model.Users!)
            {
                @users <br />
            }
        }
        else
        {
            <span class="alert alert-warning">No Users in this Role</span>
        }
    </div>
    <div class="card-footer">
        <a asp-action="ModifyUserInRole" asp-controller="Account" asp-route-id="@Model.RoleId" class="btn btn-outline-secondary">
            Add/Remove User form this Role</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
